@model List<Industry>

<div class="industries">
	<div class="industries-header d-flex align-items-center justify-content-between">
		<h1>Industries</h1>
		<a class="btn btn-primary" asp-action="Upsert">Create New Industry</a>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Industry industry in Model)
			{
				<tr>
					<td>
						@industry.Name
					</td>
					<td>
						<a asp-action="Upsert" asp-route-id="@industry.Id">Edit</a>
					</td>
					<td>
						<a asp-action="Delete" asp-route-id="@industry.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>